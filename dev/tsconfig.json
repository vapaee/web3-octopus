{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@vapaee/w3o-core": [
        "../w3o-core/src"
      ],
      "@vapaee/w3o-antelope": [
        "../w3o-antelope/src"
      ],
      "@vapaee/w3o-ethereum": [
        "../w3o-ethereum/src"
      ],
      "@app/*": [
        "src/app/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test.ts",
    "**/*.spec.ts"
  ]
}
